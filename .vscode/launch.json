    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "run climan",
            "cargo": {
                "args": [
                    "build",
                    "--bin=climan",
                    "--package=climan"
                ],
                "filter": {
                    "name": "climan",
                    "kind": "bin"
                }
            },
            "args": [
                "workflow",
                "tests/workflow.yaml",
                "--variables",
                "FOO=BAR"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "tests",
            "env": {
                "RUST_LOG": "INFO"
            },
            "cargo": {
                "env": {
                    "RUST_LOG": "INFO"
                },
                "args": [
                    "test",
                    "--no-run",
                    "--bin=climan",
                    "--package=climan"
                ],
                "filter": {
                    "name": "climan",
                    "kind": "bin"
                }
            },
            "args": [
                "--nocapture"
            ],
            "cwd": "${workspaceFolder}"
        }
    ]
}